<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/bgProfile"
            android:layout_height="220dp"
            android:background="@drawable/blur"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <Button
                    android:id="@+id/aboutUs"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="155dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/sleeping"
                    android:textAllCaps="false"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textSize="9sp"
                    android:textColor="#fff"
                    android:layout_marginStart="157dp"
                    android:layout_marginEnd="0dp"
                    tools:ignore="SmallSp" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/aa_"
                    app:civ_border_color="#c9d9e0"
                    app:civ_border_width="2dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Muhammad Iqbal Shorfana"
                        android:textColor="#fff"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/phone"
                        android:id="@+id/phone"/>
                    <ImageView
                        android:id="@+id/gmail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:src="@drawable/gmail"
                        android:onClick="klikGmail"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/instagram"
                        android:id="@+id/instagram"
                        android:onClick="klikInstagram"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <Button
            android:id="@+id/btn_toMaps"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/findme"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#fff"
            android:background="@drawable/btn_gradient_style"
            android:textAllCaps="false"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="#fff">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="Orientation">


                <android.support.v7.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="240dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp">

                    <LinearLayout
                        android:background="@drawable/card_home_f"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/deskripsi"
                            android:textColor="#80a4b8"
                            android:textSize="15sp"
                            android:elevation="2dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="@string/swipe"
                            android:textStyle="italic"
                            android:tint="#567A8D"/>

                    </LinearLayout>


                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="240dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp">

                    <LinearLayout
                        android:background="@drawable/card_home_f"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hobi"
                            android:textColor="#80a4b8"
                            android:textSize="15sp"
                            android:elevation="2dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="@string/swipe"
                            android:textStyle="italic"
                            android:tint="#567A8D"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>